#!/usr/bin/env bash
#
# Managed by ansible (mit.basic)
# DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN

[ -d /.mit-disk-info ] || mkdir /.mit-disk-info

if [ -f /sbin/fdisk ]; then
    FDISK=fdisk
else
    FDISK=gdisk
fi

for disk in $(find /dev/ -maxdepth 1 \( -name "sd?" -o -name "vd?" \) -printf '%f\n'); do
    # Devices with a card reader (francis):
    # fdisk: cannot open /dev/sdb: No medium found
    ${FDISK} -l /dev/${disk} > /.mit-disk-info/${disk}.${FDISK} 2>/dev/null
done

